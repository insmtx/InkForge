# Multi-stage build for InkForge
# Stage 1: Build the application
FROM golang:1.24-bookworm AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Install Playwright dependencies
RUN go run -c "package main; func main(){println(\"Installing Playwright dependencies\")}" && \
    go install github.com/playwright-community/playwright-go@latest && \
    go run --rm /tmp/playwright-install.go

# Build the InkForge binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o inkforge ./cmd/inkforge

# Stage 2: Runtime environment with minimal footprint
FROM mcr.microsoft.com/playwright:v1.40.0-focal

# Install fonts and ca-certificates
RUN apt-get update && \
    apt-get install -y ca-certificates curl gnupg wget && \
    rm -rf /var/lib/apt/lists/*

# Copy the binary from the builder stage
COPY --from=builder /app/inkforge .

# Install Node.js to run Playwright browsers
RUN curl -fsSL https://deb.nodesource.com/setup_18.x | bash - && \
    apt-get install -y nodejs

# Initialize Playwright to install required browsers
RUN npx playwright install chromium

# Expose port
EXPOSE 8080

# Non-root user for security
RUN groupadd -r inkforge && useradd -r -g inkforge inkforge
USER inkforge

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8080/health || exit 1

# Run the binary
CMD ["./inkforge"]